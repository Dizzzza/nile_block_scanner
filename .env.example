# Database
DATABASE_URL=postgresql://username:password@localhost:5432/tron_monitor

# TronGrid API
TRONGRID_API_URL=https://api.trongrid.io
TRONGRID_API_KEY=your_api_key_here

# Network Configuration (ID должен соответствовать записи в таблице networks)
NETWORK_ID=1
NETWORK_NAME=mainnet

# Scanner Settings
SCAN_INTERVAL=3000
BATCH_SIZE=10
START_BLOCK=0
MAX_RETRIES=3
RETRY_DELAY=1000

# Server
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info
